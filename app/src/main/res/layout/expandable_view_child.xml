<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_marginLeft="5dp"
            android:id="@+id/match_date"
            android:text="12-07-19 04:45"
            android:layout_width="70dp"
            android:gravity="center"
            android:layout_height="0dp"
            android:layout_alignBottom="@+id/option2"
            android:layout_alignParentStart="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/option1"
            android:layout_alignBottom="@+id/option2"
            android:layout_marginStart="7dp"
            android:layout_marginTop="0dp"
            android:layout_marginBottom="0dp"
            android:layout_toEndOf="@+id/match_date"
            android:src="@drawable/line" />

        <TextView
            android:id="@+id/option1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:padding="8dp"
            android:layout_toRightOf="@id/match_date"
            android:text="option1"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:clickable="true"
            android:focusable="true"
            android:id="@+id/option2"
            android:text="option2"
            android:layout_toRightOf="@id/match_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/option1"
            android:padding="8dp"
            android:layout_marginLeft="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@+id/option1"
            android:text="Vs" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="0.05dp"
            android:layout_alignTop="@+id/option1"
            android:background="#213941" />
    </RelativeLayout>

</android.support.v7.widget.CardView>